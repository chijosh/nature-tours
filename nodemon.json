{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": [
    "controllers/*.js",
    "models/*.js",
    "routes/*.js",
    "utils/*.js",
    "views/**/*.pug"
  ],

  "ext": "js,json,graphql"
}
